<h1>User List</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table bg-primary">
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <% if current_user == User.first %> <!-- Only show to the first user -->
            <% unless user.admin? %>
              <%= button_to 'Make Admin', make_admin_user_path(user), method: :post, class:"btn btn-primary"%>
            <% else %>
              <%= button_to 'Remove Admin', remove_admin_user_path(user), method: :post, class:"btn btn-danger" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>