

<% if user_signed_in?%>

  <h1>Projects</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table bg-primary">
      <tr>
        <th>Project Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="projects">
      <% @projects.each do |project| %>
        <% if project.user == current_user %>
        <tr>
          <td><%= link_to project.project_name, project %></td>
          <td><%= project.description %></td>
          <td>
            <%= button_to "Destroy this project", project, method: :delete, class:"btn btn-outline-danger btn-sm" %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

 <%= link_to "New Project", new_project_path, class:"btn btn-primary" %>
<% else %>

<div class="image-container">
  <%= image_tag 'basecamp.png', alt: 'Basecamp Prototype', class: 'floaty-image' %>
  <h1> WELCOME !!</h1>
  <h3> Please move to the signup page to begin or sigin to continue </h3>
</div>




<% end %>